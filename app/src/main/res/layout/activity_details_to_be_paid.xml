<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_F8F8F8"
    tools:context="com.yiwo.friendscometogether.pages.DetailsToBePaidActivity">

    <RelativeLayout
        android:id="@+id/activity_details_to_pay_rl_top"
        style="@style/rl_top_bar">

        <TextView
            android:id="@+id/activity_details_to_pay_tv_status"
            android:text="订单详情"
            style="@style/tv_top_title" />
        
        <RelativeLayout
            android:id="@+id/activity_details_to_pay_rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <ImageView
                style="@style/iv_return" />

        </RelativeLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="20px"
        android:layout_below="@+id/activity_details_to_pay_rl_top"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white_ffffff"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="78px">

                <TextView
                    android:id="@+id/activity_details_to_pay_tv_title"
                    android:layout_marginLeft="26px"
                    android:layout_centerVertical="true"
                    android:textColor="#333333"
                    android:textSize="26px"
                    android:text="云南旅游"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_marginRight="26px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#D84C37"
                    android:textSize="26px"
                    android:text="待付款"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="180px">

                <ImageView
                    android:id="@+id/activity_details_to_pay_iv_title"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="24px"
                    android:layout_centerVertical="true"
                    android:layout_width="180px"
                    android:layout_height="180px" />

                <TextView
                    android:id="@+id/activity_details_to_pay_tv_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:layout_marginRight="98px"
                    android:layout_marginLeft="25px"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@+id/activity_details_to_pay_iv_title"
                    android:textSize="24px"
                    android:textColor="#333333"
                    android:text="云南旅游活动云南旅游活 动云南旅游活动云南2222222222"
                    android:layout_width="288px"
                    android:layout_height="66px" />

                <TextView
                    android:id="@+id/activity_details_to_pay_tv_time"
                    android:layout_marginTop="12px"
                    android:layout_below="@+id/activity_details_to_pay_tv_content"
                    android:layout_marginLeft="25px"
                    android:layout_toRightOf="@+id/activity_details_to_pay_iv_title"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:text="行程时间：2018.1.3-2018.1.5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginTop="6px"
                    android:layout_below="@+id/activity_details_to_pay_tv_time"
                    android:textColor="#999999"
                    android:textSize="24px"
                    android:layout_marginLeft="25px"
                    android:layout_toRightOf="@+id/activity_details_to_pay_iv_title"
                    android:id="@+id/activity_details_to_pay_tv_people_num"
                    android:text="参加人数：122"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80px">
                <TextView
                    android:visibility="gone"
                    android:id="@+id/activity_details_to_pay_tv_price_details"
                    android:layout_marginLeft="40px"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black_333333"
                    android:textSize="28px"
                    android:text="自费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/activity_details_to_pay_tv_price"
                    android:layout_marginRight="24px"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:textColor="#D84C37"
                    android:textSize="24px"
                    android:text="合计：¥8888"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:paddingBottom="40px"
            android:layout_marginTop="20px"
            android:orientation="vertical"
            android:background="@color/white_ffffff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="订单信息"
                android:textSize="28px"
                android:textColor="@color/color_black_333333"
                android:layout_marginTop="40px"
                android:layout_marginLeft="38px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/activity_details_to_pay_tv_order_number"
                android:layout_marginLeft="38px"
                android:layout_marginTop="22px"
                android:textColor="@color/color_black_ff666666"
                android:textSize="24px"
                android:text="订单编号：28673575381969757"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="24px"
                android:layout_marginLeft="38px"
                android:layout_marginTop="18px"
                android:textColor="@color/color_black_ff666666"
                android:id="@+id/activity_details_to_pay_tv_trade_number"
                android:text="交易号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="24px"
                android:layout_marginLeft="38px"
                android:layout_marginTop="30px"
                android:textColor="@color/color_black_ff666666"
                android:id="@+id/activity_details_to_pay_tv_create_time"
                android:text="创建时间：2018-04-02 12：12：31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="24px"
                android:layout_marginLeft="38px"
                android:layout_marginTop="18px"
                android:textColor="@color/color_black_ff666666"
                android:id="@+id/activity_details_to_pay_tv_pay_time"
                android:text="付款时间：2018-04-02 12：12：31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="24px"
                android:layout_marginLeft="38px"
                android:layout_marginTop="18px"
                android:textColor="@color/color_black_ff666666"
                android:id="@+id/activity_details_to_pay_tv_pay_ok_time"
                android:text="成交时间：2018-04-02 12：12：31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:background="@color/white_ffffff"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_cancle_trip"
                    android:text="取消行程"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:textSize="26px"
                    android:textColor="#686868"
                    android:background="@drawable/bg_gray_border_27px"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_delete_trip"
                    android:background="@drawable/bg_gray_border_27px"
                    android:layout_marginRight="20px"
                    android:gravity="center"
                    android:textSize="26px"
                    android:textColor="#686868"
                    android:text="删除行程"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_to_trip"
                    android:textColor="#D84C37"
                    android:background="@drawable/bg_red_border_27px"
                    android:gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:textSize="26px"
                    android:text="待行程"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_triping"
                    android:textColor="#D84C37"
                    android:background="@drawable/bg_red_border_27px"
                    android:gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:textSize="26px"
                    android:text="行程中"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_comment"
                    android:textColor="#D84C37"
                    android:background="@drawable/bg_red_border_27px"
                    android:gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:textSize="26px"
                    android:text="评价"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_payment"
                    android:textColor="#D84C37"
                    android:layout_width="150px"
                    android:layout_height="54px"
                    android:layout_marginRight="20px"
                    android:background="@drawable/bg_red_border_27px"
                    android:textSize="26px"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:text="付款"
                     />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_ok_return"
                    android:textColor="#D84C37"
                    android:background="@drawable/bg_red_border_27px"
                    android:gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:textSize="26px"
                    android:text="已退款"
                    android:layout_width="150px"
                    android:layout_height="54px" />

                <TextView
                    android:visibility="gone"
                    android:id="@+id/details_to_pay_rv_tv_returning"
                    android:textColor="#D84C37"
                    android:background="@drawable/bg_red_border_27px"
                    android:gravity="center"
                    android:layout_marginRight="20px"
                    android:layout_alignParentRight="true"
                    android:textSize="26px"
                    android:text="退款中"
                    android:layout_width="150px"
                    android:layout_height="54px" />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
