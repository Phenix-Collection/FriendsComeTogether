<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:background="@color/white_ffffff"
        android:elevation="4px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="41px"
        android:layout_marginRight="41px"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="30px"
            android:layout_marginTop="20px"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:src="@mipmap/welcome"
                android:layout_width="80px"
                android:layout_height="80px" />

            <LinearLayout
                android:layout_marginLeft="22px"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:textStyle="bold"
                    android:textColor="@color/black_333333"
                    android:textSize="30px"
                    android:text="扁脸折猫耳"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/black_333333"
                    android:textSize="26px"
                    android:text="15小时前"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:ellipsize="end"
            android:lines="2"
            android:textStyle="bold"
            android:textColor="@color/black_333333"
            android:textSize="36px"
            android:layout_marginTop="14px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:text="一次神秘的智慧之旅一次神秘的智慧之 旅一次神秘的智慧之旅"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        
        <ImageView
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="14px"
            android:scaleType="centerCrop"
            android:src="@mipmap/welcome"
            android:layout_width="match_parent"
            android:layout_height="380px" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16px"
            android:textColor="#424242"
            android:textSize="30px"
            android:text="开始时间：10/3-10/8（9：30）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6px"
            android:textColor="#424242"
            android:textSize="30px"
            android:text="人均消费：RNB200/人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="6px"
            android:textColor="#424242"
            android:textSize="30px"
            android:text="报名人数：20人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_marginBottom="16px"
            android:layout_marginRight="30px"
            android:layout_marginLeft="30px"
            android:layout_marginTop="16px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerVertical="true"
                android:textColor="@color/black_333333"
                android:textSize="26px"
                android:text="剩余名额：15人"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:background="@drawable/bg_gray_8px"
                android:layout_alignParentRight="true"
                android:layout_width="114px"
                android:layout_height="52px">

                <LinearLayout
                    android:layout_marginRight="18px"
                    android:layout_marginLeft="18px"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/location_blue"
                        android:layout_gravity="center_vertical"
                        android:layout_width="22px"
                        android:layout_height="28px" />

                    <TextView
                        android:layout_marginLeft="4px"
                        android:layout_gravity="center_vertical"
                        android:textColor="#272A2C"
                        android:textSize="26px"
                        android:text="北京"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
