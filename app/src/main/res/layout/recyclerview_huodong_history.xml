<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/white_ffffff"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_marginTop="30px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:textSize="32px"
        android:textColor="#333333"
        android:text="【美食趴】双十二！跟着我们一起去探趴！"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:layout_marginTop="30px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:src="@mipmap/welcome"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="300px" />
    <RelativeLayout
        android:layout_marginTop="23px"
        android:layout_marginLeft="32px"
        android:layout_marginRight="32px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:src="@mipmap/my_head"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_width="60px"
                android:layout_height="60px" />
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="扁脸折耳猫"
                android:textColor="#333333"
                android:textSize="32px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
           android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="50px">
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shijian_history_houdong"
                android:layout_centerVertical="true"
                android:layout_marginRight="10px"
                android:layout_width="30px"
                android:layout_height="30px" />
            <TextView
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="活动已结束3天"
                android:textColor="#939393"
                android:textSize="28px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginRight="32px"
        android:layout_marginLeft="32px"
        android:layout_marginTop="32px"
        android:background="#D2D2D2"
        android:layout_width="match_parent"
        android:layout_height="1px"></LinearLayout>
    <TextView
        android:background="@drawable/bg_yellow_border_26px"
        android:gravity="center"
        android:textSize="24px"
        android:text="进入群聊"
        android:textColor="#FFAB26"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30px"
        android:layout_marginBottom="30px"
        android:layout_width="236px"
        android:layout_height="52px" />
    <LinearLayout
        android:background="@color/white_F8F8F8"
        android:layout_width="match_parent"
        android:layout_height="10px"></LinearLayout>
</LinearLayout>
