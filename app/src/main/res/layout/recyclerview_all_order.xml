<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_30px"
    android:layout_marginTop="20px"
    android:layout_marginLeft="23px"
    android:layout_marginRight="23px">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="10px"
        android:layout_height="78px">

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_title"
            android:layout_marginLeft="26px"
            android:layout_centerVertical="true"
            android:textColor="#333333"
            android:textSize="26px"
            android:text="云南旅游"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_status"
            android:layout_marginRight="26px"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:textColor="#D84C37"
            android:textSize="26px"
            android:text="待付款"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/fragment_all_order_rv_rl_details"
        android:layout_width="match_parent"
        android:layout_height="180px">

        <ImageView
            android:layout_marginLeft="24px"
            android:id="@+id/fragment_all_order_rv_iv"
            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            android:layout_width="180px"
            android:layout_height="180px" />
        <TextView
            android:layout_alignTop="@+id/fragment_all_order_rv_iv"
            android:id="@+id/fragment_all_order_rv_tv_content"
            android:lines="2"
            android:ellipsize="end"
            android:layout_marginRight="98px"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/fragment_all_order_rv_iv"
            android:textSize="24px"
            android:textColor="#333333"
            android:text="云南旅游活动云南旅游活 动云南旅游活动云南2222222222"
            android:layout_width="288px"
            android:layout_height="66px" />

        <!--<TextView-->
            <!--android:id="@+id/tv_one_person_price"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_alignParentTop="true"-->
            <!--android:layout_marginRight="24px"-->
            <!--android:text="¥88.88"-->
            <!--android:textColor="@color/color_black_333333"-->
            <!--android:textSize="26px" />-->
        <!--<TextView-->
            <!--android:layout_below="@+id/tv_one_person_price"-->
            <!--android:text="×1"-->
            <!--android:textColor="#999999"-->
            <!--android:textSize="26px"-->
            <!--android:layout_marginRight="24px"-->
            <!--android:layout_alignParentRight="true"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content" />-->

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_time"
            android:layout_below="@+id/fragment_all_order_rv_tv_content"
            android:layout_toRightOf="@+id/fragment_all_order_rv_iv"
            android:text="活动时间：2018.1.3-2018.1.5"
            android:layout_marginTop="12px"
            android:layout_marginLeft="25px"
            android:textColor="#999999"
            android:textSize="24px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView

            android:layout_below="@+id/fragment_all_order_rv_tv_time"
            android:layout_marginTop="6px"
            android:textColor="#999999"
            android:textSize="24px"
            android:layout_marginLeft="25px"
            android:layout_toRightOf="@+id/fragment_all_order_rv_iv"
            android:id="@+id/fragment_all_order_rv_tv_people_num"
            android:text="参加人数：122"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80px">

        <TextView
            android:visibility="gone"
            android:id="@+id/fragment_all_order_rv_tv_price_details"
            android:layout_marginLeft="40px"
            android:layout_centerVertical="true"
            android:textColor="@color/black_333333"
            android:textSize="28px"
            android:text="自费"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/fragment_all_order_rv_tv_price"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="24px"
            android:textColor="#333333"
            android:textSize="24px"
            android:text="合计：¥8888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:paddingRight="10px"
        android:layout_width="match_parent"
        android:layout_height="86px">

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_cancle_trip"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#686868"
                android:text="取消活动"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_delete_trip"
                android:background="@drawable/bg_gray_border_27px"
                android:layout_marginRight="10px"
                android:gravity="center"
                android:textSize="26px"
                android:textColor="#686868"
                android:text="删除活动"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_to_trip"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="进行中"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_triping"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="活动中"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_comment"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:text="评价"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_payment"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:text="付款"
                 />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_ok_return"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="已退款"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px" />

            <TextView
                android:id="@+id/fragment_to_pay_rv_tv_returning"
                android:textColor="#D84C37"
                android:background="@drawable/bg_red_border_27px"
                android:textSize="26px"
                android:layout_width="150px"
                android:layout_height="54px"
                android:gravity="center"
                android:layout_marginRight="10px"
                android:layout_alignParentRight="true"
                android:text="退款中"
                 />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
