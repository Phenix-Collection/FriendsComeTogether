<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context="com.yiwo.friendscometogether.newpage.EditorLabelActivity">

    <RelativeLayout
        android:background="#D84C37"
        android:layout_width="match_parent"
        android:layout_height="88px">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white_ffffff"
                android:textSize="32px"
                android:text="取消"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:textColor="@color/white_ffffff"
            android:textSize="36px"
            android:text="编辑个人标签"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <RelativeLayout
            android:id="@+id/rl_save"
            android:layout_alignParentRight="true"
            android:layout_width="100px"
            android:layout_height="match_parent">

            <TextView
                android:layout_centerInParent="true"
                android:textColor="@color/white_ffffff"
                android:textSize="32px"
                android:text="保存"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="33px"
        android:layout_marginTop="16px"
        android:textColor="#9B9B9B"
        android:textSize="32px"
        android:text="我的标签"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_marginTop="16px"
        android:background="@drawable/selector_fragment_my_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv1"
            android:layout_marginBottom="22px"
            android:layout_marginTop="22px"
            android:layout_marginLeft="27px"
            android:src="@mipmap/label1"
            android:layout_width="38px"
            android:layout_height="38px" />

        <android.support.v7.widget.RecyclerView
            android:layout_toLeftOf="@+id/iv_right1"
            android:layout_marginRight="33px"
            android:layout_marginLeft="33px"
            android:layout_toRightOf="@+id/iv1"
            android:id="@+id/rv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:visibility="gone"
            android:layout_marginLeft="33px"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/iv1"
            android:textColor="@color/black_333333"
            android:textSize="30px"
            android:text="我的个性标签"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/iv_right1"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/label_right"
            android:layout_width="15px"
            android:layout_height="25px" />

    </RelativeLayout>

    <TextView
        android:layout_marginLeft="33px"
        android:layout_marginTop="77px"
        android:textColor="#9B9B9B"
        android:textSize="32px"
        android:text="我的兴趣"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv2"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label2"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv2"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我喜欢的运动"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />
            
        </RelativeLayout>

        <View
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv3"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label3"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv3"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我喜欢的音乐"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv4"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label4"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv4"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我喜欢的食物"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv5"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label5"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv5"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我喜欢的电影"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv6"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label6"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv6"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我喜欢的书和动漫"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />

        </RelativeLayout>

        <View
            android:layout_marginLeft="30px"
            android:layout_alignParentBottom="true"
            android:background="#DBDBDB"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

        <RelativeLayout
            android:background="@drawable/selector_fragment_my_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv7"
                android:layout_marginBottom="20px"
                android:layout_marginLeft="30px"
                android:layout_marginTop="24px"
                android:src="@mipmap/label7"
                android:layout_width="38px"
                android:layout_height="38px" />

            <TextView
                android:layout_marginLeft="33px"
                android:layout_marginTop="20px"
                android:layout_toRightOf="@+id/iv7"
                android:textColor="@color/black_333333"
                android:textSize="30px"
                android:text="我的旅行足迹"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_marginTop="28px"
                android:layout_marginRight="30px"
                android:layout_alignParentRight="true"
                android:src="@mipmap/label_right"
                android:layout_width="15px"
                android:layout_height="25px" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
